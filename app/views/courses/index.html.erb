<h1>Listing courses</h1>

<table>
  <tr>
    <th>コース名</th>
    <th>作成者</th>
    <th>問題数</th>
    <th>共有/専有</th>
  </tr>

<% @courses.each do |course| %>
  <tr>
    <td><%= link_to course.name, course %></td>
    <td><%= course.owner.email %></td>
    <td><%= course.questions_count %></td>
    <td><%= course.sharing %></td>
  </tr>
<% end %>
</table>

