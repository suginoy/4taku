<div id="wrapper">
    <div id="header"> 
        <ul>
        <li>
        <img src="/assets/logo.gif" />
		 &nbsp sample sap mle sample copy
        </li>
        </ul>
        <div id="postQ">
        <a href="#"><img src="/assets/post.gif" /></a>
        </div>
    </div>
    <div id="question">
        <ul>
        <li class="qno">
        Q<%= @question.number %>
        </li>
        <li class="qtitle">
        <%= @question.title %>
        </li>
        </ul>
        <br />
        <br />
        <%= @question.description %>
        </div>
        <div id="answers">
            <div class="answer box">
              <%= link_to @question.choice1, { :controller => "questions", :action => "answer", :id => @question[:id], :answer => 1 }, :method => :post, :remote => true %>
            </div>
            <div class="answer box">
              <%= link_to @question.choice2, { :controller => "questions", :action => "answer", :id => @question[:id], :answer => 2 }, :method => :post, :remote => true %>
            </div>
            <div class="answer box">
              <%= link_to @question.choice3, { :controller => "questions", :action => "answer", :id => @question[:id], :answer => 3 }, :method => :post, :remote => true %>
            </div>
            <div class="answer box">
              <%= link_to @question.choice4, { :controller => "questions", :action => "answer", :id => @question[:id], :answer => 4 }, :method => :post, :remote => true %>
            </div>          
        </div>
    </div>
    <div id="result">
            <div id="resulttitle">
            Correct!
            </div>
            <div id="resulticon">
            Correct!
            </div>
    </div>
    <div id="explain">
            <div id="exptext">
              <%= @question.explanation %>
            </div>
        </div>
    <div id="nextq">
    <%= link_to image_tag("/assets/next.gif", :alt => "次の問題へ"), question_path(@next_question) %>
    </div>
</div>
