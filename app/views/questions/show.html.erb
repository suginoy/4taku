<div id="wrapper">
    <div id="header"> 
        <ul>
        <li>
        <img src="/assets/logo.gif" />
		 &nbsp sample sap mle sample copy
        </li>
        </ul>
        <div id="postQ">
        <a href="#"><img src="/assets/post.gif" /></a>
        </div>
    </div>
    <div id="question">
        <ul>
        <li class="qno">
        Q1
        </li>
        <li class="qtitle">
	  <%= @question.title %>	
        </li>
        </ul>
        <br />
        <br />
        <div id="qtext">
	  <%= @question.description %>
        </div>
        <div id="answers">
            <div class="answer box">
            A. <%= @question.choice1 %>
            </div>
            <div class="answer box">
            B. <%= @question.choice2 %>
            </div>
            <div class="answer box">
            C. <%= @question.choice3 %>
            </div>
            <div class="answer box">
            D. <%= @question.choice4 %>
            </div>          
        </div>
    </div>
    <div id="result">
            <div id="resulttitle">
            Correct!
            </div>
            <div id="resulticon">
            Correct!
            </div>
    </div>
    <div id="explain">
            <div id="exptext">
              <%= @question.explanation %>
            </div>
        </div>
    <div id="nextq">
    <%= link_to image_tag("/assets/next.gif", :alt => "次の問題へ"), question_path(@next_question) %>
    </div>
</div>
